
<div class="container pad20">
  <!-- Heading -->
  <h1 class="text-underline text-brand">Delicious cocktails</h1>

    <!-- Grid row -->
  <div class="row">
    <!-- Card -->
    <% @cocktails.each do |cocktail| %>

    <div class="col-xs-12 col-sm-4">
      <div class="card">
          <h2> <%= link_to cocktail.name, cocktail_path(cocktail.id) %> </h2>
    </div>
    <% end %>
  </div>

  <!-- Add button -->
  <div class="pad10">
    <%= link_to "Add your cocktail", new_cocktail_path, class: "btn btn-primary pad20" %>
  </div>

<!-- Close main div -->
</div>
